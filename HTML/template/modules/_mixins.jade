//- SVG icons
mixin svg(symbol, w, h)
  - var w = (typeof w === 'undefined') ? "100%" : w;
  - var h = (typeof h === 'undefined') ? "100%" : h;

  svg(width=w, height=h)
    use(xlink:href='#' + symbol)


//- SVG filter
mixin svg-filter
  svg(style='display: none')
    defs
      filter#svg-filter
        fegaussianblur(stddeviation='0')
        feColorMatrix(type='saturate' values='0')
      filter#svg-filter-hover
        fegaussianblur(stddeviation='0')
        feColorMatrix(type="saturate" values='1')

mixin svg-img(imageLink)
 svg.svg-filter
  image(xlink:href='#{dir.img + imageLink}', width='100%' height='100%', filter='url(#svg-filter)' preserveAspectRatio='none')


