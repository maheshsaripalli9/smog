//- Repair intro page
mixin intro-page(title, bg, img)
  - var bg = (typeof bg === 'undefined') ? "dark" : bg;
  - var img = (typeof img === 'undefined') ? ROOT + pattern : img;

  //           ¬ section intro           /
  section.intro-page.parallax-repeat(class=bg, style="background-image: url(#{img})")
    .container
      .intro-page__content-wrapper
        h1=title

  //           end section intro           /


