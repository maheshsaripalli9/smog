    //           ¬ navbar user menu           /
    ul.nav.navbar-nav.navbar-right.navbar-nav-user

      //           ¬ navbar account           /
      //           * class actived on user profile           /
      li.dropdown.actived
        a.dropdown-toggle(href='#', data-toggle="dropdown", role="button", aria-expanded="false")
          span.icon.pe-7s-user
          span.fa.fa-caret-down

        ul.dropdown-menu.dropdown-menu-account(role="menu")
          //           ¬ user login           /
          li.user-login
            form#loginForm.navbar-form(action="/", method="POST", data-toggle="validator")
              h3 Sign in
              .form-group
                label.label-control(for="loginEmail") E-mail
                input#loginEmail.form-control(
                type="email",
                name='user_email',
                required='required'
                )
              .form-group
                label.label-control(for="loginPass") Password #[+link-accent()(class='forgot-pass') (forgot?)]
                input#loginPass.form-control(
                type="password",
                name='user_password',
                required='required'
                )
              .form-group
                .check-wrap
                  label.label-control
                    input.form-checkbox(type="checkbox", required)
                    i.fa.fa-check
                    | Remember me

              +btn-form
                | Login
              p Don’t you have an account? #[a.link-accent(href=ROOT + link.register) Sign up now]

          //           end user login           /
          =ind

          //           ¬ user profile           /
          li.user-profile
            h3.user-profile__title
              | Welcome,
              span.text-danger.user-profile__nickname
                |  user2084!

