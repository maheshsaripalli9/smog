//- Home page
extends _base

block page
  -
    page = {
      language: 'en',
      title: 'Carros | Login',
      appTitle: 'Carros Login',
      description: '',
      id: 'page_login',
      class: 'page-login page-inner'
    }

block icons

block header
  include partials/_header-retailer

block content
  main.page-content
    //           ¬ section-intro           /
    +catalog-intro-page('Account')

    //           end section-intro           /

    include partials/_category-filter
    =ind

    +breadcrumb_catalog(
      ["Home", "retailer.html"],
      ["Account"]
    )

    //           ¬ page-content-wrapper           /
    .page-content-wrapper
      .container
        article.panel.panel-account.panel-account-login
          .panel__inner
            form#signLogin(action="/", method="POST", data-toggle="validator")
              .panel__heading
                h2.panel__title Sign in
              .panel__body
                .form-group
                  label.label-control(for="accountEmail") E-mail
                  input#accountEmail.form-control(
                    type="email",
                    name='user_email',
                    required
                  )
                .form-group
                  label.label-control(for="accountPass") Password #[a.link-accent(href="#") (forgot?)]
                  input#accountPass.form-control(
                    type="password",
                    name='user_name',
                    required
                  )
                .form-group
                  .check-wrap
                    label.label-control
                      input.form-checkbox(type="checkbox", required)
                      i.fa.fa-check
                      | Remember me

                .panel__footer
                  +btn-form
                    | Login
                  p Don’t you have an account? #[a.link-accent(href=ROOT + link.register) Sign up now]

    //           end page-content-wrapper           /


block footer
  include partials/_footer

block bottom

