            img.img-responsive(src=ROOT + gallery3.center[9], alt="")
            +gallery-over-link

        //           end gallery group           /

    //           end gallery-content-wrapper           /

block footer
  include ../partials/_footer

block bottom
  include ../partials/_lightbox

