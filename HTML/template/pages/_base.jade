include ../_config
include ../modules/_mixins

- ROOT = '../';
- pathTouch: ROOT + 'images/touch/'
-
  dir = {
    css: ROOT + 'css/',
    img: ROOT + 'images/',
    js: ROOT + 'js/'
  },

//- Extends template page
block page
doctype html
html(class="no-js" lang="#{page.language}")
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='description', content='#{page.description}')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    title #{page.title}
    =ind

    // Disable tap highlight on IE
    meta(name='msapplication-tap-highlight', content='no')
    =ind

    // Add to homescreen for Chrome on Android
    meta(name='mobile-web-app-capable', content='yes')
    meta(name='application-name', content='#{page.description}')
    link(rel='icon', sizes='192x192', href='#{theme.pathTouch}' + 'chrome-touch-icon-192x192.png')
    =ind

    // Add to homescreen for Safari on iOS
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='apple-mobile-web-app-status-bar-style', content='black')
    meta(name='apple-mobile-web-app-title', content='#{page.appTitle}')
    link(rel='apple-touch-icon', href='#{theme.pathTouch}' + 'apple-touch-icon.png')
    =ind

    // Tile icon for Win8 (144x144 + tile color)
    meta(name='msapplication-TileImage', content='#{theme.pathTouch}' + 'ms-touch-icon-144x144-precomposed.png')
    meta(name='msapplication-TileColor', content='#{theme.msappColor}')
    =ind

    // Color the status bar on mobile devices
    meta(name='theme-color', content='#{theme.themeColor}')
    =ind

    //- SEO: If your mobile URL is different from the desktop URL, add a canonical link to the desktop page https://developers.google.com/webmasters/smartphone-sites/feature-phones
    //- <link rel="canonical" href="http://www.example.com/">
    =ind

    //- Extends for fonts and styles
    block styles
      include ../partials/_head
    =ind

    block tools
      include ../partials/_tools

  body(id="#{page.id}" class="#{page.class}")
    #preloader
      img(src=ROOT + 'images/three-dots.svg', alt="#")

    =ind
    block icons
    //           ¬ svg filters           /
    +svg-filter()

    //           end svg filters           /

    block header
    =ind2

    //           ¬ Page Content           /
    block content
    //           end Page Content           /
    =ind2

    block footer
    =ind2

    block bottom
    //- include ../partials/_theme-demo

    block scripts
      include ../partials/_scripts
      =ind
