        //           ¬ about-carousel           /
        .section-about__carousel-contain.col-sm-12.col-md-10.col-lg-8
          .section-about__carousel.owl-carousel.owl-theme
            - for (var i = 0; i < 2; i++)

              //           ¬ group slides           /
              figure.section-about__slide
                img(src="#{dir.img + 'upload/about-carousel/slide1.jpg'}", alt="")

              figure.section-about__slide
                img(src="#{dir.img + 'upload/about-carousel/slide2.jpg'}", alt="")

              figure.section-about__slide
                img(src="#{dir.img + 'upload/about-carousel/slide3.jpg'}", alt="")

              figure.section-about__slide
                img(src="#{dir.img + 'upload/about-carousel/slide4.jpg'}", alt="")

