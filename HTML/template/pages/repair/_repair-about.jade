          figure.carousel-track__item
            img.img-responsive.img-filter(src="#{dir.img + 'upload/about-carousel/thumb4.jpg'}", alt="")
            +svg-img('upload/about-carousel/thumb4.jpg')

          figure.carousel-track__item
            img.img-responsive.img-filter(src="#{dir.img + 'upload/about-carousel/thumb5.jpg'}", alt="")
            +svg-img('upload/about-carousel/thumb5.jpg')

          figure.carousel-track__item
            img.img-responsive.img-filter(src="#{dir.img + 'upload/about-carousel/thumb6.jpg'}", alt="")
            +svg-img('upload/about-carousel/thumb6.jpg')
          //           end group thumbs           /
          =ind2

